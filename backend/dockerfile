FROM php:8.3-fpm

# Установка системных зависимостей
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libpq-dev \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    zip \
    unzip \
    && docker-php-ext-install pdo pdo_pgsql mbstring exif pcntl bcmath gd \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Установка Composer (правильный способ)
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Временная рабочая директория для установки зависимостей
WORKDIR /tmp

# Копируем только composer файлы
COPY composer.json composer.lock ./

# Установка зависимостей
RUN composer install --no-dev --no-scripts --no-autoloader

# Основная рабочая директория
WORKDIR /var/www/html

# Копируем весь код
COPY . .

# Финализация autoloader
RUN composer dump-autoload --optimize

# Создаем необходимые директории
RUN mkdir -p storage/app/public \
    && mkdir -p storage/framework/{cache,sessions,views} \
    && mkdir -p bootstrap/cache

# Устанавливаем права
RUN chown -R www-data:www-data storage bootstrap/cache \
    && chmod -R 775 storage bootstrap/cache

# Альтернатива storage:link через копирование
RUN rm -rf public/storage \
    && mkdir -p public/storage \
    && cp -r storage/app/public/* public/storage/ || true

EXPOSE 9000

CMD ["php-fpm"]
